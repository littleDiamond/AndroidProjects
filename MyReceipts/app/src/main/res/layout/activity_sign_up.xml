<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sign_upActivity">

    <TextView
        android:id="@+id/account_toast"
        android:textSize="28sp"
        android:text="Sign up for MyReceipt"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/rebeccaPurple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/add_user_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="First name"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:inputType="textPersonName"
        android:textColorHint="@color/rebeccaPurple" />

    <EditText
        android:id="@+id/add_user_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Last name"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:inputType="textPersonName"
        android:textColorHint="@color/rebeccaPurple" />

    <EditText
        android:id="@+id/add_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Email"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/rebeccaPurple" />

    <EditText
        android:id="@+id/add_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:textColorHint="@color/rebeccaPurple" />

    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Create account"
        android:textSize="25sp"
        android:fontFamily="sans-serif-medium"
        android:textColorHint="@color/rebeccaPurple" /> />

</LinearLayout>